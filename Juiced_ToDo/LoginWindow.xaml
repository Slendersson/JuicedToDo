<Window x:Class="Juiced_ToDo.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Juiced_ToDo"
        mc:Ignorable="d"
        Title="Zaloguj" Height="300" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center">Logowanie</TextBlock>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Label VerticalContentAlignment="Center">Adres E-Mail:</Label>
            <TextBox Height="30" Width="300" Margin="20 0 0 0" VerticalContentAlignment="Center" Name="tbemail_address"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Label VerticalContentAlignment="Center">Hasło:</Label>
            <TextBox Height="30" Width="300" Margin="20 0 0 0" VerticalContentAlignment="Center" Name="tbpassword"></TextBox>
        </StackPanel>
        <Button Grid.Row="3" Height="35" Width="200" Click="LoginButtonClicked" Tag="{}">Zaloguj</Button>
    </Grid>
</Window>
